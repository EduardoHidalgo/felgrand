// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model StoredCard {
  id Int @id @default(autoincrement())

  archetype  String?
  banType    String
  cardType   String
  importance Int
  name       String
  priority   Int
  race       String

  items StoredCardItem[]
}

model StoredCardItem {
  id Int @id @default(autoincrement())

  condition    Int
  language     String
  rarityCode   String?
  setCode      String?
  setName      String?
  status       String
  storageGroup String?

  boughtValue Decimal
  count       Int
  value       Decimal
  wantedCount Int

  StoredCard   StoredCard @relation(fields: [storedCardId], references: [id])
  storedCardId Int
  ctPrices     CTPrices?
}

model CTPrices {
  id Int @id @unique @default(autoincrement())

  betterPrice Decimal?
  marketPrice Decimal?
  minPrice    Decimal?

  cardName String
  setName  String
  rarity   String

  StoredCardItem   StoredCardItem? @relation(fields: [storedCardItemId], references: [id])
  storedCardItemId Int?            @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
