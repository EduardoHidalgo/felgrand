generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model StoredCard {
  id Int @id @default(autoincrement())

  archetype    String?
  banType      String?
  cardType     String
  importance   String?
  name         String
  priority     String?
  race         String
  status       String
  storageGroup String?
  yugiohId     Int

  items StoredCardVariation[]
}

model StoredCardVariation {
  id Int @id @default(autoincrement())

  condition  String
  count      Int
  language   String
  rarityCode String
  setCode    String
  setName    String

  CardList   StoredCard? @relation(fields: [cardListId], references: [id])
  cardListId Int?
}
